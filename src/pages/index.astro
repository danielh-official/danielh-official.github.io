---
import "../styles/global.css";

const links = [
  { label: "GitHub", href: "https://github.com/danielh-official" },
  { label: "LinkedIn", href: "https://www.linkedin.com/in/danielh0/" },
  { label: "Twitter", href: "https://x.com/danielhaven0" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Daniel Haven's personal website" />
    <meta name="generator" content={Astro.generator} />
    <title>Daniel Haven</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <main class="mx-auto max-w-2xl px-4 py-12 sm:px-6 sm:py-12 max-[380px]:px-4 max-[380px]:py-8">
      <article class="flex flex-col items-center gap-10">
        <header class="flex flex-col items-center gap-3 text-center">
          <img
            class="h-24 w-24 rounded-full border-2 border-gray-200 object-cover"
            src="https://avatars.githubusercontent.com/u/49914607?v=4"
            alt=""
            width="96"
            height="96"
          />
          <h1 class="m-0 text-2xl font-bold leading-tight tracking-tight">Daniel Haven</h1>
          <p class="m-0 text-sm text-gray-500">Full Stack Web Dev</p>
        </header>

        <nav aria-label="Links" class="w-full max-w-sm">
          <ul class="m-0 flex list-none flex-col gap-3 p-0">
            {
              links.map(({ label, href }) => (
                <li>
                  <a
                    class="block w-full rounded-xl border border-gray-200 bg-white px-5 py-3.5 text-center text-sm font-medium text-gray-900 no-underline shadow-sm transition hover:border-gray-300 hover:bg-gray-50 hover:text-gray-900 hover:no-underline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
                    href={href}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </article>
    </main>
  </body>
</html>
