{
    "private": true,
    "scripts": {
        "dev": "mix",
        "watch": "mix watch",
        "prod": "mix --production",
        "format": "vendor/bin/pint && npx prettier --write source/",
        "format:check": "vendor/bin/pint --test && npx prettier --check source/",
        "format:php": "vendor/bin/pint",
        "format:blade": "npx prettier --write source/**/*.blade.php",
        "build": "php vendor/bin/jigsaw build",
        "build:prod": "php vendor/bin/jigsaw build production",
        "deploy": "git add build_production && git commit -m \"Build for deploy\" && git subtree push --prefix build_production origin gh-pages",
        "deploy:force": "git add build_production && git commit -m \"Build for deploy\" && git push origin gh-pages --force",
        "deploy:clean": "git add build_production && git commit -m \"Build for deploy\" && git subtree push --prefix build_production origin gh-pages --squash"
    },
    "devDependencies": {
        "alpinejs": "^3.14.1",
        "autoprefixer": "^10.4.13",
        "axios": "^0.21.1",
        "browser-sync": "^2.27.4",
        "browser-sync-webpack-plugin": "^2.3.0",
        "fast-glob": "^3.2.12",
        "fuse.js": "^6.4.6",
        "highlight.js": "^11.7.0",
        "laravel-mix": "^6.0.39",
        "laravel-mix-jigsaw": "^2.0.0",
        "postcss": "^8.4.21",
        "postcss-import": "^14.0.2",
        "prettier": "^3.6.2",
        "prettier-plugin-blade": "^2.1.21",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^3.2.4"
    }
}
